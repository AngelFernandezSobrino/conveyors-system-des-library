    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Sim",
            "type": "debugpy",
            "request": "launch",
            "program": "sim/main.py",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Sim Verbose",
            "type": "debugpy",
            "request": "launch",
            "program": "sim/main.py",
            "args": ["--verbose"],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}